{
  "info": {
    "name": "Update Article by Slug",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Update Article by Slug",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"article\": {\n    \"title\": \"Nuevo título actualizado\",\n    \"description\": \"Nueva descripción actulizada\",\n    \"body\": \"Nuevo contenido actualizado\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/articles/:slug",
          "host": ["{{baseUrl}}"],
          "path": ["articles", ":slug"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    }
  ]
}
